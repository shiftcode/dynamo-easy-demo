{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap":  true,
    "outDir": "./dist/",
    "skipLibCheck": true
  }
}